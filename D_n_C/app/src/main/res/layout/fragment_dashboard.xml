<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".ui.DashboardFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Header: Nước uống -->
        <TextView
            android:id="@+id/tv_water_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Theo dõi Nước Uống"
            android:textStyle="bold"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Card: Progress Bar Nước (Sử dụng ProgressBar hoặc thư viện) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_water_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/tv_water_header">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <!-- Placeholder cho Progress Bar hình tròn (Thường là Custom View hoặc thư viện) -->
                <ProgressBar
                    android:id="@+id/water_circular_progress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:max="100"
                    android:progress="65"
                    android:progressDrawable="@drawable/circular_progress_bar"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <TextView
                    android:id="@+id/tv_water_percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/design_default_color_primary"
                    tools:text="65%"
                    app:layout_constraintTop_toTopOf="@id/water_circular_progress"
                    app:layout_constraintBottom_toBottomOf="@id/water_circular_progress"
                    app:layout_constraintStart_toStartOf="@id/water_circular_progress"
                    app:layout_constraintEnd_toEndOf="@id/water_circular_progress"/>

                <TextView
                    android:id="@+id/tv_water_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:text="1300 / 2000 ml"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/water_circular_progress" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_water_status"
                    app:layout_constraintStart_toStartOf="@id/tv_water_status">

                    <Button
                        android:id="@+id/btn_add_200"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+200 ml"
                        android:layout_marginEnd="8dp"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                    <Button
                        android:id="@+id/btn_add_300"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+300 ml"
                        android:layout_marginEnd="8dp"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                    <Button
                        android:id="@+id/btn_add_500"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+500 ml"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!-- Header: Cân nặng & BMI -->
        <TextView
            android:id="@+id/tv_bmi_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Cân nặng &amp; BMI"
            android:textStyle="bold"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/card_water_progress"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Card: BMI -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_bmi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintWidth_percent="0.48"
            app:layout_constraintTop_toBottomOf="@id/tv_bmi_header"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chỉ số BMI"
                    android:textSize="14sp"
                    android:textColor="#757575" />

                <TextView
                    android:id="@+id/tv_current_bmi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    tools:text="22.5" />

                <TextView
                    android:id="@+id/tv_bmi_classification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textSize="14sp"
                    android:textColor="@color/design_default_color_primary_dark"
                    tools:text="Bình thường" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card: Cân nặng hôm nay -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_weight_today"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintWidth_percent="0.48"
            app:layout_constraintTop_toTopOf="@id/card_bmi"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cân nặng Hôm nay"
                    android:textSize="14sp"
                    android:textColor="#757575" />

                <TextView
                    android:id="@+id/tv_current_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    tools:text="68.0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="kg"
                    android:textSize="14sp"
                    android:textColor="#757575" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Button: Nhập cân nặng (Thao tác) -->
        <Button
            android:id="@+id/btn_enter_weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Nhập Cân nặng / Chiều cao"
            app:icon="@drawable/ic_scale"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            app:layout_constraintTop_toBottomOf="@id/card_bmi"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>