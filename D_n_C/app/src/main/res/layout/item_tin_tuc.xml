<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <!-- Ảnh bài viết -->
        <ImageView
            android:id="@+id/imgAnhBaiViet"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:background="#CCCCCC"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Tiêu đề -->
        <TextView
            android:id="@+id/tvTieuDe"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Tiêu đề bài viết"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintStart_toEndOf="@id/imgAnhBaiViet"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Mô tả ngắn -->
        <TextView
            android:id="@+id/tvMoTa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Mô tả ngắn của bài viết..."
            android:textSize="14sp"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintStart_toStartOf="@id/tvTieuDe"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTieuDe" />

        <!-- Nguồn tin -->
        <TextView
            android:id="@+id/tvNguonTin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Nguồn tin"
            android:textStyle="italic"
            android:textSize="12sp"
            android:textColor="#555555"
            app:layout_constraintStart_toStartOf="@id/tvMoTa"
            app:layout_constraintTop_toBottomOf="@id/tvMoTa"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <!-- Ngày đăng -->
        <TextView
            android:id="@+id/tvNgayDang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20/10/2023"
            android:textSize="12sp"
            android:textColor="#555555"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@id/tvNguonTin"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>