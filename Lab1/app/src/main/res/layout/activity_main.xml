<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Password"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="561dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="11dp"
        tools:layout_editor_absoluteY="458dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone no"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="11dp"
        tools:layout_editor_absoluteY="371dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="14dp"
        tools:layout_editor_absoluteY="280dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="452dp"
        android:layout_height="282dp"
        android:background="@drawable/anh1"
        tools:layout_editor_absoluteX="-5dp"
        tools:layout_editor_absoluteY="-5dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rubik_light"
            android:text="Sign up"
            android:textSize="38sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="171dp" />

        <View
            android:id="@+id/view"
            android:layout_width="67dp"
            android:layout_height="2dp"
            android:background="#FF8383"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="228dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <EditText
        android:id="@+id/editTextTextEmailAddress"
        android:layout_width="410dp"
        android:layout_height="53dp"
        android:backgroundTint="#FD8282"
        android:drawableLeft="@drawable/bieutuong2"
        android:ems="10"
        android:hint="  demo@email.com"
        android:inputType="textEmailAddress"
        tools:layout_editor_absoluteX="11dp"
        tools:layout_editor_absoluteY="302dp" />

    <EditText
        android:id="@+id/editTextTextEmailAddress2"
        android:layout_width="407dp"
        android:layout_height="50dp"
        android:backgroundTint="#FF8383"
        android:drawableLeft="@drawable/bieutuong"
        android:ems="10"
        android:hint="  +0777439917"
        android:inputType="textEmailAddress"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="393dp" />

    <EditText
        android:id="@+id/editTextTextEmailAddress3"
        android:layout_width="409dp"
        android:layout_height="50dp"
        android:backgroundTint="#BDBDBD"
        android:drawableLeft="@drawable/bieutuong3"
        android:drawableRight="@drawable/bieutuong1"
        android:ems="10"
        android:hint="  enter your password"
        android:inputType="textEmailAddress"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="480dp" />

    <EditText
        android:id="@+id/editTextTextEmailAddress4"
        android:layout_width="407dp"
        android:layout_height="48dp"
        android:backgroundTint="#BDBDBD"
        android:drawableLeft="@drawable/bieutuong3"
        android:drawableRight="@drawable/bieutuong1"
        android:ems="10"
        android:hint="  confirm your password"
        android:inputType="textEmailAddress"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="583dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="343dp"
        android:layout_height="49dp"
        android:backgroundTint="#FF8383"
        android:text="Create Acount"
        android:textColorLink="#FF8383"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="687dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have an Acount! "
        tools:layout_editor_absoluteX="136dp"
        tools:layout_editor_absoluteY="756dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textColor="#FF8383"
        tools:layout_editor_absoluteX="290dp"
        tools:layout_editor_absoluteY="756dp" />

</androidx.constraintlayout.widget.ConstraintLayout>